# Arguments for definining plotSubplots
plotAnalyse_plotSubplots_iterOrTime = iterations
plotAnalyse_plotSubplots_xScale     = log
plotAnalyse_plotSubplots_yScale     = log
plotAnalyse_plotSubplots_grid       = True

